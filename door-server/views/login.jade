html
  head
    title=title
    link(href='/css/bootstrap.css', rel='stylesheet')
  body
    nav.navbar.navbar-default.navbar-inverse.navbar-static-top
      div.container-fluid
        a.navbar-brand CCOWMU Door Admin Panel
    div.container
      div.row
        div.col-md-offset-5.col-md-3
          div.form-login
            form(action='/login' method='post')
              p
                h2.form-signin-heading Log In
              p
                label.sr-only username
                input.form-control.input-lg(type='text' name='username' placeholder='username')
              p
                label.sr-only password
                input.form-control.input-lg(type='password' name='password' placeholder='password')
              p
                button.btn.btn-lg.btn-primary(type='submit') Submit

    script(type='text/javascript' src='/js/jquery-2.1.3.min.js')
    script(type='text/javascript' src='/js/bootstrap.js')
